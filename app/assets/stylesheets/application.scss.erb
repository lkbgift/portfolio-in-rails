.back-to-top{
  width: 50px;
  height: 50px;
  margin: 0 auto;
  background-color: #CCC;
  border-radius: 30px;
  overflow: hidden;
  text-indent: -9999px;
  display: inline-block;
  background-image: url(image_path('arrowup.png'));
  background-size: cover;
  &:hover{
    background-image: url(image_path('arrowup.png'));
    background-size: cover;
    background-color: #ddd;
  }
}

.item{
  transition: 250ms all;
  max-width: 200px;
}

.box-color{
  .text-overlay{
    transform: translateY(100%);
    transition: 250ms all;
    h3{
      font-size: 16px;
    }
    p{
      font-size: 13px;
    }
  }
  &:hover{
    .text-overlay{
      transform: translateY(0%);
    }
  }
}

.text-overlay{
  position: absolute;
  width: 100%;
  bottom: 0px;
  background: rgba(255, 255, 255, 0.6);
  left: 0;
  right: 0;
}

.top-nav-block{
  margin-bottom: 3.5em;
}

img.logo-image{
  max-width: 105px;
  border-radius: 10px;
}

.box-color{
  position: relative;
  overflow: hidden;
  li{
    list-style: none;
  }
}

.press{
  .box-color{
    img{
      display: inline-block;
    }
    h3{
      display: inline- block;
    }
  }
}
