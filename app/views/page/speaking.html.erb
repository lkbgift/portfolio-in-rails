<div class="" id="consulting" data-magellan-destination="consulting">
  <div class="row">
    <div class="large-12 column text-center">
      <div class="hero semi-independent text-center">
        <h2 style="">Full-stack web developer in New York City.</h2>
        <a href="mailto:lkbgift@gmail.com" class="button success radius small">Tell me about your project</a>
      </div>
  </div>
</div>

<ul class="large-block-grid-1 small-block-grid-1">
  <% @talks.reverse_each do |talk| %>
    <li>
      <div class="box-color">
        <h3><%= talk.title %> </h3>
        <p class="d-inline mb0"><%= talk.event %>, <%= talk.location %>, <%= talk.length %></p>
        <p class="d-inline"><%= talk.description %></p>
      </div>
    </li>
  <% end %>
</ul>

