<div class="" id="consulting" data-magellan-destination="consulting">
  <div class="row">
    <div class="large-12 column">
      <div class="hero independent">
        <h2 style="">See where I've been showcased.</h2>
        <a href="mailto:lkbgift@gmail.com" class="button success radius small">Want to feature me? Get in touch.</a>
      </div>
  </div>
</div>

<ul class="large-block-grid-2 small-block-grid-1 press">
  <% @presses.reverse_each do |press| %>
    <li>
      <div class="box-color large-12 large-centered columns">
          <a href="<%= press.presslink %>">
          <div class="row">
            <div class="large-12 columns">
              <img src="<%= press.screenshot %>" alt="<%= press.title %>">
            </div>
          </div>
          <div class="row push-1 pull-1">
            <div class="large-3 small-12 columns">
              <img src="<%= press.url %>" alt="<%= press.title %>">
            </div>
            <div class="large-9 small-12 columns">
              <h3><%= press.title %></h3>
              <p><%= press.description %></p>
            </div>
          </a>
        </div>
      </div>
    </li>
  <% end %>
</ul>
