  <%= render 'layouts/head' %>

  <body id="page">

    <div class="large-12">
      <header class="header large-10 large-push-3 medium-10 medium-push-3">
        <div class="large-12 column text-center">
          <div class="large-12 column text-center">
            <div class="hero text-left">
              <h1 class="bold-header red-highlight">Remember Lenny</h1>
            </div>
          </div>
        </div>
      </header>

      <section class="content large-9 medium-9 column large-push-3">
        <%= yield %>
      </section><!--close content-->

      <div class="large-3 medium-3 column large-pull-9">
        <div class="top-nav-block">
          <h2 class="logo"><%= link_to "Lenny Bogdonoff", root_path %></h2>
          <div class="description">
            <a href="https://twitter.com/rememberlenny" class="twitter-follow-button" data-show-count="false">Follow @rememberlenny</a>
          </div>
        </div>
        <ul class="no-list-style">
          <%= render 'layouts/topnav' %>
        </ul>
      </div>

      <%= render 'layouts/footer' %>
    </div>

    <%= javascript_include_tag "application" %>
  </body>
</html>
