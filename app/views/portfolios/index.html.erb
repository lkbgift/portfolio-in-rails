<div class="isup" id="consulting" data-magellan-destination="consulting">
  <div class="large-12">
    <h2 style="">Full-stack web developer in New York City.</h2>
    <p class="alert label">Currently not for hire.</p>
  </div>
  <div class="row"></div>
  <div class="large-12">
    <div class="large-10 large-pull-2 column no-pad-left">
      <ul class="large-block-grid-2 medium-block-grid-2">
        <% @portfolios.each do |work| %>
          <li>
            <div class="box-color padded-1">
              <%= link_to work_url() + '/' + work.slug do %>
                <%= image_tag work.image %>
                <h3><%= work.title %></h3>
                <p><%= work.description %></p>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
